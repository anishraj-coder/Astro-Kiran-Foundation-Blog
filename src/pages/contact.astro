---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contact Us | Kiran Foundation">
    {/* Header Section */}
    <div class="bg-gradient-to-r from-orange-500 to-orange-700 py-20 text-white font-g-regular">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 font-g-bold">Get in Touch</h1>
            <p class="text-lg md:text-xl text-orange-100 max-w-2xl mx-auto">We'd love to hear from you! Whether you have questions, want to volunteer, or need support, reach out to us.</p>
        </div>
    </div>

    <div class="container mx-auto px-4 py-16 font-g-regular">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            {/* Contact Information */}
            <div class="space-y-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Contact Details</h2>
                
                <div class="flex items-start space-x-4">
                    <div class="text-orange-600 mt-1">
                        <i class="fas fa-map-marker-alt text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-1">Our Office</h3>
                        <p class="text-gray-700">Kiran Foundation
                            
                            Foundation in Bengaluru, Karnataka</p>
                    </div>
                </div>

                <div class="flex items-start space-x-4">
                    <div class="text-orange-600 mt-1">
                        <i class="fas fa-phone-alt text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-1">Phone</h3>
                        <p class="text-gray-700">+91 98801414120</p>
                    </div>
                </div>

                <div class="flex items-start space-x-4">
                    <div class="text-orange-600 mt-1">
                        <i class="fas fa-envelope text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-1">Email</h3>
                        <p class="text-gray-700"><a href="mailto:info@kiran.foundation" class="hover:text-orange-600 transition-colors">info@kiran.foundation</a></p>
                    </div>
                </div>

                <div class="flex items-start space-x-4">
                    <div class="text-orange-600 mt-1">
                        <i class="fas fa-clock text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-1">Office Hours</h3>
                        <p class="text-gray-700">Monday - Friday: 9:00 AM - 5:00 PM</p>
                        <p class="text-gray-700">Saturday - Sunday: Closed</p>
                    </div>
                </div>

                {/* Social Media Links */}
                <div class="pt-6 border-t border-gray-100">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Follow Us</h3>
                    <div class="flex space-x-6">
                        <a href="https://twitter.com/Kiran_Trust" target="_blank" rel="noopener" class="text-gray-600 hover:text-blue-500 transition-colors" aria-label="Twitter">
                            <i class="fab fa-twitter text-2xl"></i>
                        </a>
                        <a href="https://www.facebook.com/foundation.kiran" target="_blank" rel="noopener"class="text-gray-600 hover:text-blue-700 transition-colors" aria-label="Facebook">
                            <i class="fab fa-facebook text-2xl"></i>
                        </a>
                        <a href="https://www.linkedin.com/company/kirantrust/posts/?feedView=all" target="_blank" rel="noopener" class="text-gray-600 hover:text-blue-600 transition-colors" aria-label="LinkedIn">
                            <i class="fab fa-linkedin text-2xl"></i>
                        </a>
                        <a href="https://www.instagram.com/kiran_trust/" target="_blank" rel="noopener"class="text-gray-600 hover:text-pink-500 transition-colors" aria-label="Instagram">
                            <i class="fab fa-instagram text-2xl"></i>
                        </a>
                    </div>
                </div>
            </div>

            {/* Contact Form */}
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
                <form action="#" method="POST" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                        <input type="text" id="name" name="name" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                        <input type="email" id="email" name="email" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                        <input type="text" id="subject" name="subject" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                        <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"></textarea>
                    </div>
                    <div>
                        <button 
                            type="submit" 
                            class="w-full bg-orange-600 text-white py-3 px-6 rounded-lg hover:bg-orange-700 transition-colors font-medium text-lg"
                        >
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {/* Map Section */}
        <div class="mt-20">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Find Us Here</h2>
            <div class="rounded-lg overflow-hidden h-96 shadow-lg mx-auto w-[60%]">
                <iframe 
                    class="w-full h-full"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3885.954697454555!2d77.58407727482145!3d13.10205651200527!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae185f8cd910a5%3A0x5598203e060c3d9c!2sKiran%20Foundation!5e0!3m2!1sen!2sin!4v1746350880129!5m2!1sen!2sin" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</MainLayout>